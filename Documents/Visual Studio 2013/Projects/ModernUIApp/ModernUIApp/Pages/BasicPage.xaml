<UserControl x:Class="ModernUIApp.Pages.BasicPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" Background="#FF534343">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer Background="#FF573939">
            <Button Content="Click Me" Width="182" Height="152" RenderTransformOrigin="0.503,0.585" Click="Button_Click" Opacity="0.8" Background="#FFFF944A" BorderThickness="0">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.394"/>
                        <TranslateTransform X="-37.243" Y="29.569"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </ScrollViewer>
    </Grid>
</UserControl>
